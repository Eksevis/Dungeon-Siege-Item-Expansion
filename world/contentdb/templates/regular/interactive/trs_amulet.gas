[t:template,n:amulet_horseshoe]
{
	specializes = amulet;
	doc = "Horseshoe Amulet";
	common:screen_name	= "Goldsniffer's Amulet";
    common:is_pcontent_allowed = false;
    gui:inventory_icon = b_gui_ig_i_it_amulet_030;
    aspect:gold_value		= 1220;

	[magic]
	{
		[enchantments]
		{
			[*]
			{
				alteration			= alter_dexterity;
				value				= 2;
				description			= "+2 to Dexterity";
				duration			= #infinite;
				is_permanent		= true;
				is_single_instance	= false;
			}
		}
	}
}
